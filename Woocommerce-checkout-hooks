    woocommerce_form_field( 'billing_info', array(
        'type' => 'textarea',
        'class' => array( 'my-field-class form-row-wide' ),
        'required' => true,
        'label' => 'Billing Information',
    ), '' );
}
add_action( 'woocommerce_checkout_after_customer_details', 'my_custom_checkout_field' );

